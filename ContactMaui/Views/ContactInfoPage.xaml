<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:viewmodels="clr-namespace:ContactMaui.ViewModels"
             x:DataType="{x:Type viewmodels:ContactInfoViewModel}"
             
             x:Class="ContactMaui.Views.ContactInfoPage"
             Title="ContactInfoPage">
    
    <VerticalStackLayout Margin="20">
        <Label Text="Contact" VerticalOptions="Center" VerticalTextAlignment="Center" />

        <Entry Placeholder="First name" Text="{Binding GetContactFromListCommand.FirstName}"/>
        <Entry Placeholder="Last name" Text="{Binding GetContactFromListCommand.LastName}"/>
        <Entry Placeholder="Phone number" Text="{Binding GetContactFromListCommand.PhoneNumber}"/>
        <Entry Placeholder="Email" Text="{Binding GetContactFromListCommand.Email}"/>
        <Entry Placeholder="Address" Text="{Binding GetContactFromListCommand.Address}"/>
        <Entry Placeholder="Postal code" Text="{Binding GetContactFromListCommand.PostalCode}"/>
        <Entry Placeholder="City" Text="{Binding GetContactFromListCommand.City}"/>

        <Button Text="Delete contact" Command="{Binding DeleteContactFromListCommand}" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>